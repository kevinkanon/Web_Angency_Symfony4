<div class="card mb-4">
    <div class="card-body">
        {% if property.filename %}
            <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="card-img_top" style="width: 100%; height: auto">
        {% endif %}

        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}"></a>
        </h5>
        <p class="card-text">{{ property.surface }} m² - {{ property.city }} ({{ property.postalCode }})</p>
        <div class="text-primary" style="font-size: 2em; font-weight: bold;">
            {{ property.formattedprice }} €
        </div>
    </div>
</div>